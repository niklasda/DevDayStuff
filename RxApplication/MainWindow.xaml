<Window x:Class="RxApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RxApplication"
        mc:Ignorable="d"
        Title="Rx.NET Demo Window" Height="350" Width="525">
    <Grid DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
        <GroupBox x:Name="groupBox" Header="Demos" HorizontalAlignment="Left" Margin="17,18,0,0" VerticalAlignment="Top" Height="212" Width="127">
            <Button x:Name="button" Content="Demo1" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Demo1Command}"/>
        </GroupBox>
        <GroupBox x:Name="groupBox1" Header="Results" HorizontalAlignment="Left" Margin="220,18,0,0" VerticalAlignment="Top" Height="212" Width="175">
            <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="124" Margin="20,22,0,0" TextWrapping="Wrap" Text="{Binding TextResult}" VerticalAlignment="Top" Width="120"/>
        </GroupBox>

    </Grid>
</Window>
