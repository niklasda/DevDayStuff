<Window x:Class="RxApplication.Views.PresentationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Presentation" Height="600" Width="500" 
        Icon="/RxApplication;component/Icon/Rx_Icon.png">
    <Grid DataContext="{Binding Source={StaticResource VmLocator}, Path=Presentation}">
        <TextBlock x:Name="textBlock" Margin="10" TextWrapping="Wrap" FontSize="32" Text="{Binding PresentationText}"/>

    </Grid>
</Window>
