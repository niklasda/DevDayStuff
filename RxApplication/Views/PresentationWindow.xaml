<Window x:Class="RxApplication.Views.PresentationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Presentation" Height="500" Width="600" 
        Icon="/RxApplication;component/Icon/Rx_Icon.png"
        DataContext="{Binding Source={StaticResource VmLocator}, Path=Presentation}"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Margin="10" TextWrapping="Wrap" FontSize="32" Text="{Binding PresentationText}"/>

    </Grid>
</Window>
